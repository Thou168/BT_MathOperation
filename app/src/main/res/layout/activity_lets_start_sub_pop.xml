<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/let_start_bg"
    tools:context=".Activity.Go_to.Lets_start.For_Sub.Lets_start_sub_1">

    <ImageView
        android:id="@+id/img_back"
        android:src="@drawable/back_red_new"
        android:scaleType="fitCenter"
        android:layout_marginTop="29.84dp"
        android:layout_marginStart="19.7dp"
        android:layout_width="52dp"
        android:layout_height="44dp"/>

    <ImageView
        android:id="@+id/sounds"
        android:visibility="visible"
        android:layout_alignParentEnd="true"
        android:src="@drawable/sound_on"
        android:scaleType="centerCrop"
        android:layout_width="68dp"
        android:layout_height="52.09dp"
        android:layout_marginEnd="19dp"
        android:layout_marginTop="26dp"/>
    <ScrollView
        android:layout_below="@+id/img_back"
        android:layout_marginTop="39dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ln_main"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/example"
                android:textSize="18sp"
                android:text="ឧទាហរណ៍ ៖ 48 - 5 = ? "
                android:fontFamily="@font/battambang_regular"
                android:layout_marginStart="41dp"
                android:textColor="#3A3D5F"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_marginStart="41dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/carry_on"
                    android:text="1"
                    android:textSize="15sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@id/symbol"
                    android:visibility="gone"
                    android:textColor="#3A3D5F"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/top_num"
                    android:text="48"
                    android:textSize="21sp"
                    android:layout_below="@+id/carry_on"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@id/symbol"
                    android:textColor="#3A3D5F"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/symbol"
                    android:text="-"
                    android:layout_marginTop="45dp"
                    android:textSize="21sp"
                    android:textColor="#3A3D5F"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/bottom_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/top_num"
                    android:layout_marginTop="60dp"
                    android:text="5"
                    android:textAlignment="textEnd"
                    android:textColor="#3A3D5F"
                    android:textSize="21sp" />
<!--                <ImageView-->
<!--                    android:id="@+id/ruler"-->
<!--                    android:layout_below="@+id/bottom_num"-->
<!--                    android:src="@drawable/below"-->
<!--                    android:layout_width="60dp"-->
<!--                    android:layout_height="1dp"/>-->
                <View
                    android:id="@+id/ruler"
                    android:layout_width="60dp"
                    android:layout_below="@+id/bottom_num"
                    android:layout_height="1dp"
                    android:background="#3A3D5F" />
                <ImageView
                    android:src="@drawable/vector"
                    android:layout_marginStart="20dp"
                    android:paddingTop="10dp"
                    android:layout_toEndOf="@id/bottom_num"
                    android:layout_marginTop="40dp"
                    android:layout_width="63dp"
                    android:layout_height="100dp"/>

                <TextView
                    android:id="@+id/answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ruler"
                    android:layout_alignEnd="@+id/top_num"
                    android:textAlignment="textEnd"
                    android:layout_toEndOf="@+id/symbol"
                    android:text="43"
                    android:textColor="#3A3D5F"
                    android:textSize="21sp" />
            </RelativeLayout>
            <LinearLayout
                android:background="@drawable/gradient_around_pink"
                android:gravity="start|center"
                android:layout_marginStart="41dp"
                android:layout_marginEnd="41dp"
                android:layout_marginTop="25dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/oval"
                        android:layout_width="7.94dp"
                        android:layout_gravity="center|top"
                        android:layout_marginTop="15dp"
                        android:layout_height="7.94dp"/>
                    <TextView
                        android:id="@+id/txt_explain_top"
                        android:textColor="#3A3D5F"
                        android:text="8 ដក 5 នៅសល់ 3 សរសេរលេខ 3"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/battambang_regular"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/oval"
                        android:layout_width="7.94dp"
                        android:layout_gravity="center|top"
                        android:layout_marginTop="15dp"
                        android:layout_height="7.94dp"/>
                    <TextView
                        android:id="@+id/txt_explain_bottom"
                        android:text="4 ទម្លាក់ចុះ សរសេរលេខ 4"
                        android:layout_marginStart="5dp"
                        android:textColor="#3A3D5F"
                        android:fontFamily="@font/battambang_regular"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/such_as"
                android:text="ដូចនេះ 48 - 5 = 43"
                android:textSize="18sp"
                android:layout_marginStart="41dp"
                android:fontFamily="@font/battambang_regular"
                android:textColor="#3A3D5F"
                android:layout_marginTop="19dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_marginStart="41dp"
                android:layout_marginEnd="41dp"
                android:layout_width="match_parent"
                android:paddingBottom="5dp"
                android:layout_marginTop="19dp"
                android:layout_height="290dp">
                <RelativeLayout
                    android:background="@drawable/gradient_around_pink"
                    android:layout_width="wrap_content"
                    android:layout_height="230dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/ln_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:background="@drawable/background_exit_dialog"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:layout_width="0dp"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">
                                <TextView
                                    android:text="ខ្ទង់ដប់"
                                    android:layout_centerInParent="true"
                                    android:textSize="18sp"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/battambang_regular"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">
                                <TextView
                                    android:text="ខ្ទង់រាយ"
                                    android:layout_centerInParent="true"
                                    android:textSize="18sp"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/battambang_regular"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </RelativeLayout>
                        </LinearLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/pop_first"
                                android:text="2"
                                android:layout_marginStart="85dp"
                                android:textSize="15sp"
                                android:textColor="#3A3D5F"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/two_char_top"
                                android:layout_below="@+id/pop_first"
                                android:text="3"
                                android:layout_marginTop="-10dp"
                                android:layout_marginStart="75dp"
                                android:textSize="18sp"
                                android:textColor="#3A3D5F"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:text="-"
                                android:id="@+id/symbol_add"
                                android:layout_below="@+id/two_char_top"
                                android:layout_marginStart="20dp"
                                android:textSize="18sp"
                                android:layout_marginTop="10dp"
                                android:textColor="#3A3D5F"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/two_char_bot"
                                android:text="8"
                                android:visibility="gone"
                                android:layout_below="@+id/two_char_top"
                                android:layout_marginTop="35.38dp"
                                android:layout_marginStart="75dp"
                                android:layout_alignParentStart="true"
                                android:textSize="18sp"
                                android:textColor="#3A3D5F"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <View
                                android:layout_width="1dp"
                                android:layout_centerInParent="true"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:background="#3A3D5F" />
                            <TextView
                                android:id="@+id/two_ans"
                                android:text="2"
                                android:layout_below="@+id/symbol_add"
                                android:layout_marginStart="75dp"
                                android:layout_marginTop="53dp"
                                android:textSize="18sp"
                                android:textColor="#3A3D5F"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/pop_sec"
                                android:text="12"
                                android:layout_marginEnd="62dp"
                                android:layout_alignParentEnd="true"
                                android:textSize="15sp"
                                android:textColor="#3A3D5F"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/one_char_top"
                                android:text="2"
                                android:layout_below="@+id/pop_first"
                                android:layout_marginTop="-10dp"
                                android:layout_marginEnd="80dp"
                                android:layout_alignParentEnd="true"
                                android:textSize="18sp"
                                android:textColor="#3A3D5F"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/one_char_bot"
                                android:text="8"
                                android:layout_below="@+id/one_char_top"
                                android:layout_marginTop="35.38dp"
                                android:layout_marginEnd="80dp"
                                android:layout_alignParentEnd="true"
                                android:textSize="18sp"
                                android:textColor="#3A3D5F"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:id="@+id/one_ans"
                                android:text="4"
                                android:layout_below="@+id/one_char_bot"
                                android:layout_marginTop="28dp"
                                android:layout_marginEnd="80dp"
                                android:layout_alignParentEnd="true"
                                android:textSize="18sp"
                                android:textColor="#3A3D5F"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </RelativeLayout>

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="160dp"
                        android:background="#3A3D5F" />
                </RelativeLayout>
                <com.dd.ShadowLayout
                    android:id="@+id/shadow_id"
                    app:sl_shadowRadius="10dp"
                    android:layout_centerInParent="true"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:sl_cornerRadius="4dp"
                    app:sl_shadowColor="#F50057">

                    <TextView
                        android:id="@+id/start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="233dp"
                        android:minHeight="53dp"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:textSize="22sp"
                        android:background="@drawable/button_state_red"
                        android:fontFamily="@font/battambang_regular"
                        android:textAppearance="@style/TextAppearance.AppCompat.Button"
                        android:text="តោះលេងហ្គេម"/>
                </com.dd.ShadowLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>