<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/let_start_bg">

    <ImageView
        android:id="@+id/img_back"
        android:src="@drawable/back_red_new"
        android:scaleType="fitCenter"
        android:layout_marginTop="29.84dp"
        android:layout_marginStart="19.7dp"
        android:layout_width="52dp"
        android:layout_height="44dp"/>

    <ImageView
        android:id="@+id/sounds"
        android:visibility="visible"
        android:layout_alignParentEnd="true"
        android:src="@drawable/sound_on"
        android:scaleType="centerCrop"
        android:layout_width="68dp"
        android:layout_height="52.09dp"
        android:layout_marginEnd="19dp"
        android:layout_marginTop="26dp"/>
    <ScrollView
        android:layout_below="@+id/img_back"
        android:layout_marginTop="39dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ln_main"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/example"
                android:textSize="18sp"
                android:text="ឧទាហរណ៍ ៖ ក្រណាត់មួយផ្ទាំងចែកជា 10ចំណែកស្មើគ្នា។​ គេយក4ចំណែកទៅដេរខោ។ តាងដោយប្រភាគ"
                android:fontFamily="@font/battambang_regular"
                android:layout_marginStart="41dp"
                android:layout_marginEnd="41dp"
                android:textColor="#3A3D5F"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_marginStart="45dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtTop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/txtBot"
                    android:layout_alignParentStart="true"
                    android:gravity="center"
                    android:fontFamily="@font/battambang_regular"
                    android:text="4"
                    android:textColor="#3A3D5F"
                    android:textSize="18sp" />
                <View
                    android:id="@+id/ruler"
                    android:layout_width="20dp"
                    android:layout_below="@+id/txtTop"
                    android:layout_height="1dp"
                    android:background="#3A3D5F" />
                <TextView
                    android:id="@+id/txtBot"
                    android:text="10"
                    android:textSize="18sp"
                    android:textColor="#3A3D5F"
                    android:fontFamily="@font/battambang_regular"
                    android:layout_below="@+id/ruler"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/equal"
                    android:layout_toEndOf="@+id/ruler"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ឬ"
                    android:textColor="#3A3D5F"
                    android:textSize="18sp" />
                <TextView
                    android:layout_toEndOf="@+id/equal"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.4"
                    android:textColor="#3A3D5F"
                    android:textSize="18sp" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/img"
                android:layout_marginStart="41dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/decimal_game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/such_as"
                android:text="@string/doch_nis_decimal"
                android:textSize="18sp"
                android:layout_marginStart="41dp"
                android:layout_marginEnd="41dp"
                android:fontFamily="@font/battambang_regular"
                android:textColor="#3A3D5F"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.dd.ShadowLayout
                android:id="@+id/shadow_id"
                app:sl_shadowRadius="10dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:sl_cornerRadius="4dp"
                app:sl_shadowColor="#F50057">

                <TextView
                    android:id="@+id/start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="233dp"
                    android:minHeight="53dp"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="22sp"
                    android:background="@drawable/button_state_red"
                    android:fontFamily="@font/battambang_regular"
                    android:textAppearance="@style/TextAppearance.AppCompat.Button"
                    android:text="តោះលេងហ្គេម"/>
            </com.dd.ShadowLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>