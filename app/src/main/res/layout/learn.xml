        <RelativeLayout
            android:id="@+id/rl_board"
            android:layout_marginTop="100dp"
            android:layout_width="351dp"
            android:background="@drawable/board"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_height="237dp">
            <RelativeLayout
                android:gravity="center"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/num_top"
                    android:textColor="@color/white"
                    android:text="1   1"
                    android:layout_toEndOf="@+id/symbol"
                    android:textSize="36sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/symbol"
                    android:layout_below="@+id/num_top"
                    android:src="@drawable/add_1"
                    android:layout_width="16.67dp"
                    android:layout_height="16.67dp"/>
                <TextView
                    android:id="@+id/num_bottom"
                    android:textColor="@color/white"
                    android:layout_below="@+id/num_top"
                    android:layout_marginTop="18dp"
                    android:layout_toEndOf="@id/symbol"
                    android:text="1   2"
                    android:textSize="36sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <View
                    android:id="@+id/line_equal"
                    android:layout_toEndOf="@id/symbol"
                    android:layout_width="72dp"
                    android:layout_height="3dp"
                    android:layout_below="@+id/num_bottom"
                    android:background="@color/white" />
                <TextView
                    android:id="@+id/num_result"
                    android:textColor="@color/white"
                    android:layout_below="@+id/line_equal"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@id/symbol"
                    android:text=""
                    android:textSize="36sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </RelativeLayout>

